    <!-- Script Selection Tab -->
    <ContentPage Title="Script Selection" BackgroundColor="#1E1E1E">
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- First Row: Directory Selection -->
            <Grid ColumnDefinitions="*,*"
              RowDefinitions="Auto">
                <VerticalStackLayout Padding="10" Spacing="5" Grid.Column="0">
                    <Label Text="Solo Directory" FontSize="14" TextColor="White"/>
                    <Entry x:Name="textBoxSoloDirectory" BackgroundColor="White" TextColor="Black" TextChanged="OnSoloDirectoryChanged"/>
                </VerticalStackLayout>

                <VerticalStackLayout Padding="10" Spacing="5" Grid.Column="1">
                    <Label Text="Coop Directory" FontSize="14" TextColor="White"/>
                    <Entry x:Name="textBoxCoopDirectory" BackgroundColor="White" TextColor="Black" TextChanged="OnSoloDirectoryChanged"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Spacer -->
            <BoxView HeightRequest="10" Color="Transparent"/>

            <!-- Second Row: List Boxes for Solo and Coop XML Files -->
            <Grid ColumnDefinitions="*,*"
              RowDefinitions="Auto">
                <!-- Solo Scripts -->
                <VerticalStackLayout Padding="10" Spacing="5" Grid.Column="0">
                    <Label Text="Solo Scripts" FontSize="14" TextColor="White"/>
                    <Grid RowDefinitions="Auto, *">
                        <!-- Header Row -->
                        <Grid BackgroundColor="#2A2A2A" RowDefinitions="Auto" ColumnDefinitions="2*,*,*">
                            <Label Text="File Name" FontSize="12" TextColor="White" Padding="5" />
                            <Label Text="File Size (KB)" FontSize="12" TextColor="White" Padding="5" Grid.Column="1" />
                            <Label Text="Last Modified" FontSize="12" TextColor="White" Padding="5" Grid.Column="2" />
                        </Grid>
                        <!-- ListView -->
                        <ListView x:Name="listViewSoloXmlFiles"
                  BackgroundColor="#1E1E1E"
                  HeightRequest="400"
                  SeparatorVisibility="Default"
                                  ItemSelected="OnFileSelected"
                  Grid.Row="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Padding="5" ColumnDefinitions="2*,*,*">
                                            <Label Text="{Binding FileName}" TextColor="White" FontSize="14" VerticalTextAlignment="Center"/>
                                            <Label Text="{Binding FileSize}" TextColor="White" FontSize="14" VerticalTextAlignment="Center" Grid.Column="1"/>
                                            <Label Text="{Binding LastModified}" TextColor="White" FontSize="14" VerticalTextAlignment="Center" Grid.Column="2"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </VerticalStackLayout>

                <!-- Coop Scripts -->
                <VerticalStackLayout Padding="10" Spacing="5" Grid.Column="1">
                    <Label Text="Coop Scripts" FontSize="14" TextColor="White"/>
                    <Grid RowDefinitions="Auto, *">
                        <!-- Header Row -->
                        <Grid BackgroundColor="#2A2A2A" RowDefinitions="Auto" ColumnDefinitions="2*,*,*">
                            <Label Text="File Name" FontSize="12" TextColor="White" Padding="5" />
                            <Label Text="File Size (KB)" FontSize="12" TextColor="White" Padding="5" Grid.Column="1" />
                            <Label Text="Last Modified" FontSize="12" TextColor="White" Padding="5" Grid.Column="2" />
                        </Grid>
                        <!-- ListView -->
                        <ListView x:Name="listViewCoopXmlFiles"
                  BackgroundColor="#1E1E1E"
                  HeightRequest="400"
                  SeparatorVisibility="Default"
                                  ItemSelected="OnFileSelected"
                  Grid.Row="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid Padding="5" ColumnDefinitions="2*,*,*">
                                            <Label Text="{Binding FileName}" TextColor="White" FontSize="14" VerticalTextAlignment="Center"/>
                                            <Label Text="{Binding FileSize}" TextColor="White" FontSize="14" VerticalTextAlignment="Center" Grid.Column="1"/>
                                            <Label Text="{Binding LastModified}" TextColor="White" FontSize="14" VerticalTextAlignment="Center" Grid.Column="2"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>
    </ContentPage>



    <!-- Script Check Tab -->
    <ContentPage Title="Script Check">
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Row with Buttons and Search Box -->
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="buttonCheckScripts" Clicked="buttonCheckScripts_Clicked"
                    Text="Check Scripts"
                    HeightRequest="40"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    FontAttributes="Bold"/>

                <Button x:Name="buttonFindWord" Clicked="buttonFindWord_Clicked"
                    Text="Find Word"
                    HeightRequest="40"
                    BackgroundColor="#FF7F50"
                    TextColor="White"
                    FontAttributes="Bold"/>

                <Entry x:Name="textBoxSearch"
                   Placeholder="Search..."
                   WidthRequest="200"
                   BackgroundColor="White"
                   TextColor="Black"/>
            </HorizontalStackLayout>

            <!-- Labels for List Views -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Solo"
                   FontSize="16"
                       WidthRequest="700"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start"/>

                <Label Text="Coop"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="End"/>
            </HorizontalStackLayout>

            <!-- Two List Views Side by Side -->
            <HorizontalStackLayout Spacing="10">
                <!-- Solo ListBox -->
                <ListView x:Name="listBoxCheckSoloErrors"
          BackgroundColor="White"
          HeightRequest="400"
          WidthRequest="700"
          SeparatorVisibility="Default"
                                          ItemsSource="{Binding SoloErrors}"
                    HorizontalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding}" TextColor="Black" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <ListView x:Name="listBoxCheckCoopErrors"
          BackgroundColor="White"
          HeightRequest="400"
          WidthRequest="700"
                          ItemsSource="{Binding CoopErrors}"
          SeparatorVisibility="Default"
          HorizontalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding}" TextColor="Black" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage>

    <!-- About Tab -->
    <ContentPage Title="About">
        <Grid>
            <Image Source="about.png"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>
        </Grid>
    </ContentPage>



